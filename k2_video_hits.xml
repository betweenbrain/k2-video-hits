<?xml version="1.0" encoding="utf-8"?>
<install version="2.5" type="plugin" group="system" method="upgrade">
	<name>System - K2 Video Hits</name>
	<author>Matt Thomas</author>
	<creationDate>March 22, 2013</creationDate>
	<copyright>2013 Matt Thomas</copyright>
	<license>GPL 2.0</license>
	<authorEmail></authorEmail>
	<authorUrl>http://www.betweenbrain.com</authorUrl>
	<version>1.0</version>
	<description>Joomla! 1.5/2.5 pseudo-cron plugin to synchronize video view data (hits) from external providers with K2 item hits. Pseduo-cron portion based on the FeedGator pseudo-cron plugin by Matt Faulds of Trafalgar Design (UK) Ltd.	</description>
	<files>
		<filename plugin="k2_video_hits">k2_video_hits.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_k2_video_hits.ini</language>
	</languages>
	<params>
		<param name="cronInterval"
		       type="list"
		       default="5"
		       label="PLG_K2_VIDEO_HITS_CRON_INTERVAL_LABEL"
		       description="PLG_K2_VIDEO_HITS_CRON_INTERVAL_DESC">
			<option value="1">1M</option>
			<option value="2">2M</option>
			<option value="3">3M</option>
			<option value="4">4M</option>
			<option value="5">5M</option>
			<option value="10">10M</option>
			<option value="15">15M</option>
			<option value="20">20M</option>
			<option value="25">25M</option>
			<option value="30">30M</option>
			<option value="45">45M</option>
			<option value="60">1H</option>
			<option value="90">1H30M</option>
			<option value="120">2H</option>
			<option value="240">4H</option>
			<option value="360">6H</option>
			<option value="480">8H</option>
			<option value="600">10H</option>
			<option value="720">12H</option>
			<option value="840">14H</option>
			<option value="960">16H</option>
			<option value="1080">18H</option>
			<option value="1200">20H</option>
			<option value="1320">22H</option>
			<option value="1440">1D</option>
		</param>
		<param name="batchSize"
		       type="list"
		       default="25"
		       label="PLG_K2_VIDEO_HITS_BATCH_SIZE_LABEL"
		       description="PLG_K2_VIDEO_HITS_BATCH_SIZE_DESC">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="10">10</option>
			<option value="15">15</option>
			<option value="20">20</option>
			<option value="25">25</option>
			<option value="50">50</option>
			<option value="100">100</option>
			<option value="150">150</option>
			<option value="200">200</option>
			<option value="250">250</option>
		</param>
		<param name="modifiedDiff"
		       type="list"
		       default="25"
		       label="PLG_K2_VIDEO_HITS_MODIFIED_DIFF_LABEL"
		       description="PLG_K2_VIDEO_HITS_MODIFIED_DIFF_DESC">
			<option value="1">1M</option>
			<option value="2">2M</option>
			<option value="3">3M</option>
			<option value="4">4M</option>
			<option value="5">5M</option>
			<option value="10">10M</option>
			<option value="15">15M</option>
			<option value="20">20M</option>
			<option value="25">25M</option>
			<option value="30">30M</option>
			<option value="45">45M</option>
			<option value="60">1H</option>
			<option value="90">1H30M</option>
			<option value="120">2H</option>
			<option value="240">4H</option>
			<option value="360">6H</option>
			<option value="480">8H</option>
			<option value="600">10H</option>
			<option value="720">12H</option>
			<option value="840">14H</option>
			<option value="960">16H</option>
			<option value="1080">18H</option>
			<option value="1200">20H</option>
			<option value="1320">22H</option>
			<option value="1440">1D</option>
		</param>
		<param name="k2category"
		       type="text"
		       default=""
		       label="PLG_K2_VIDEO_HITS_K2CATEGORY_LABEL"
		       description="PLG_K2_VIDEO_HITS_K2CATEGORY_DESC"/>
		<param name="exclusions"
		       type="text"
		       default=""
		       label="PLG_K2_VIDEO_HITS_EXCLUSIONS_LABEL"
		       description="PLG_K2_VIDEO_HITS_EXCLUSIONS_DESC"/>
		<param name="providerfield"
		       type="text"
		       default=""
		       label="PLG_K2_VIDEO_HITS_PROVIDER_LABEL"
		       description="PLG_K2_VIDEO_HITS_PROVIDER_DESC"/>
		<param name="videoidfield"
		       type="text"
		       default=""
		       label="PLG_K2_VIDEO_HITS_VIDEO_ID_LABEL"
		       description="PLG_K2_VIDEO_HITS_VIDEO_ID_DESC"/>
		<param name="youtube"
		       type="radio"
		       default="0"
		       label="PLG_K2_VIDEO_HITS_YOUTUBE_LABEL"
		       description="PLG_K2_VIDEO_HITS_YOUTUBE_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="brightcove"
		       type="radio"
		       default="0"
		       label="PLG_K2_VIDEO_HITS_BRIGHTCOVE_LABEL"
		       description="PLG_K2_VIDEO_HITS_BRIGHTCOVE_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="brightcovetoken"
		       type="text"
		       default=""
		       label="PLG_K2_VIDEO_HITS_BRIGHTCOVE_TOKEN_LABEL"
		       description="PLG_K2_VIDEO_HITS_BRIGHTCOVE_TOKEN_DESC"/>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="cronInterval"
				       type="text"
				       default="5"
				       label="PLG_K2_VIDEO_HITS_INTERVAL_LABEL"
				       description="PLG_K2_VIDEO_HITS_INTERVAL_DESC"/>
				<field name="k2category"
				       type="text"
				       default=""
				       label="PLG_K2CATEGORY_LABEL"
				       description="PLG_K2CATEGORY_DESC"/>
				<field name="exclusions"
				       type="text"
				       default=""
				       label="PLG_K2_VIDEO_HITS_EXCLUSIONS_LABEL"
				       description="PLG_K2_VIDEO_HITS_EXCLUSIONS_DESC"/>
				<field name="providerfield"
				       type="text"
				       default=""
				       label="PLG_K2_VIDEO_HITS_PROVIDER_LABEL"
				       description="PLG_K2_VIDEO_HITS_PROVIDER_DESC"/>
				<field name="videoidfield"
				       type="text"
				       default=""
				       label="PLG_K2_VIDEO_HITS_VIDEO_ID_LABEL"
				       description="PLG_K2_VIDEO_HITS_VIDEO_ID_DESC"/>
				<field name="youtube"
				       type="radio"
				       default="0"
				       label="PLG_K2_VIDEO_HITS_YOUTUBE_LABEL"
				       description="PLG_K2_VIDEO_HITS_YOUTUBE_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="brightcove"
				       type="radio"
				       default="0"
				       label="PLG_K2_VIDEO_HITS_BRIGHTCOVE_LABEL"
				       description="PLG_K2_VIDEO_HITS_BRIGHTCOVE_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="brightcovetoken"
				       type="text"
				       default=""
				       label="PLG_K2_VIDEO_HITS_BRIGHTCOVE_TOKEN_LABEL"
				       description="PLG_K2_VIDEO_HITS_BRIGHTCOVE_TOKEN_DESC"/>
			</fieldset>
		</fields>
	</config>
</install>
